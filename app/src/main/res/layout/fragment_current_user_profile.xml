<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">


	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.example.messenger.presentation.fragment.CurrentUserProfileFragment">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/account_toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<ImageButton
					android:id="@+id/account_back_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_alignParentStart="true"
					android:background="@drawable/ic_back_24">
				</ImageButton>
			</RelativeLayout>
		</androidx.appcompat.widget.Toolbar>

		<ImageView
			android:id="@+id/user_image"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/ic_account_fill_24"
			app:layout_constraintTop_toBottomOf="@id/account_toolbar"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">
		</ImageView>

		<TextView
			android:id="@+id/user_name_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingHorizontal="30dp"
			android:text="Name"
			app:layout_constraintTop_toBottomOf="@id/user_image"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">
		</TextView>

		<TextView
			android:id="@+id/user_time_status_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingHorizontal="30dp"
			android:text="Time"
			app:layout_constraintTop_toBottomOf="@id/user_name_text"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">
		</TextView>

		<TextView
			android:id="@+id/user_email_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingHorizontal="30dp"
			android:text="Email"
			app:layout_constraintTop_toBottomOf="@id/user_time_status_text"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">
		</TextView>

		<TextView
			android:id="@+id/user_bio_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingHorizontal="30dp"
			android:text="Bio"
			app:layout_constraintTop_toBottomOf="@id/user_email_text"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">
		</TextView>

	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>